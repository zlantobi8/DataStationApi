{
  "version": 2,
  "builds": [
    {
      "src": "index.js",   // The main file with Express routes
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",     // This matches all routes prefixed with /api/
      "dest": "/index.js"     // This will direct the request to index.js
    }
  ]
}
